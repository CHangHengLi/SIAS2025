<UserControl
    x:Class="_2025毕业设计.Views.EditMessage.AwardNominateManager.EditAwardNominate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:_2025毕业设计.Views.EditMessage.AwardNominateManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/2025毕业设计;component/Dict/ConverterDict.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="20" hc:Growl.GrowlParent="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  提名编号  -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="提名编号：" />
            <TextBox
                Grid.Column="1"
                Margin="10,0,0,0"
                IsReadOnly="True"
                Text="{Binding NominationId, Mode=OneWay}" />
        </Grid>

        <!--  提报奖项  -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="提报奖项：" />
            <ComboBox
                Grid.Column="1"
                Margin="10,0,0,0"
                DisplayMemberPath="AwardName"
                IsEditable="True"
                ItemsSource="{Binding Awards}"
                SelectedItem="{Binding SelectedAward}"
                StaysOpenOnEdit="True" />
        </Grid>

        <!--  提报对象  -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="提报对象：" />
            
            <!-- 使用TabControl让用户可以切换员工和管理员 -->
            <TabControl Grid.Column="1" Margin="10,0,0,0" BorderThickness="0">
                <TabItem Header="员工">
                    <ComboBox
                        Margin="0,5,0,0"
                        DisplayMemberPath="EmployeeName"
                        IsEditable="True"
                        ItemsSource="{Binding Employees}"
                        SelectedItem="{Binding SelectedNominee}"
                        StaysOpenOnEdit="True" />
                </TabItem>
                <TabItem Header="管理员">
                    <ComboBox
                        Margin="0,5,0,0"
                        DisplayMemberPath="AdminName"
                        IsEditable="True"
                        ItemsSource="{Binding Admins}"
                        SelectedItem="{Binding SelectedNominee}"
                        StaysOpenOnEdit="True" />
                </TabItem>
            </TabControl>
        </Grid>

        <!--  所属部门  -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="所属部门：" />
            <TextBox
                Grid.Column="1"
                Margin="10,0,0,0"
                IsReadOnly="True"
                Text="{Binding DepartmentName, Mode=OneWay}" />
        </Grid>

        <!--  一句话介绍  -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Top" Text="一句话介绍：" />
            <TextBox
                Grid.Column="1"
                Height="60"
                Margin="10,0,0,0"
                AcceptsReturn="True"
                MaxLength="50"
                Text="{Binding Introduction}"
                TextWrapping="Wrap" />
        </Grid>

        <!--  提名理由  -->
        <Grid Grid.Row="5" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Top" Text="提名理由：" />
            <TextBox
                Grid.Column="1"
                Height="100"
                Margin="10,0,0,0"
                AcceptsReturn="True"
                Text="{Binding NominateReason}"
                TextWrapping="Wrap" />
        </Grid>

        <!--  封面图片  -->
        <Grid Grid.Row="6" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Top" Text="封面图片：" />
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Button
                    Width="100"
                    HorizontalAlignment="Left"
                    Command="{Binding UploadImageCommand}"
                    Content="上传图片"
                    Style="{StaticResource ButtonPrimary}" />
                <Image
                    Grid.Row="1"
                    MaxHeight="200"
                    Margin="0,10,0,0"
                    Source="{Binding CoverImagePreview}"
                    Stretch="Uniform" />
            </Grid>
        </Grid>

        <!--  按钮区域  -->
        <StackPanel
            Grid.Row="9"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="0,0,10,0"
                Command="{Binding SaveCommand}"
                Content="保存"
                Style="{StaticResource ButtonPrimary}" />
            <Button
                Width="80"
                Command="{Binding CancelCommand}"
                Content="取消"
                Style="{StaticResource ButtonDefault}" />
        </StackPanel>
    </Grid>
</UserControl>
