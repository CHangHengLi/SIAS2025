<UserControl
    x:Class="_2025毕业设计.Views.EditMessage.NominationDeclarationManager.AddNominationDeclaration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:_2025毕业设计.Common"
    xmlns:converter="clr-namespace:_2025毕业设计.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:_2025毕业设计.Views.EditMessage.NominationDeclarationManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Width="300"
    d:DesignHeight="1000"
    d:DesignWidth="300"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/2025毕业设计;component/Dict/ConverterDict.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  添加必要的转换器  -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

            <!--  自定义AutoCompleteTextBox样式修复绑定错误  -->
            <Style
                x:Key="FixedAutoCompleteTextBoxStyle"
                BasedOn="{StaticResource {x:Type hc:AutoCompleteTextBox}}"
                TargetType="hc:AutoCompleteTextBox">
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>


            <!--  自定义AutoCompleteTextBoxItem样式，避免使用RelativeSource绑定  -->
            <Style x:Key="CustomAutoCompleteTextBoxItemStyle" TargetType="hc:AutoCompleteTextBoxItem">
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="MinHeight" Value="26" />
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="hc:AutoCompleteTextBoxItem">
                            <Border
                                x:Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                                <ContentPresenter
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD" />
                                    <Setter Property="Foreground" Value="#2196F3" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="5">
        <Border
            Padding="10"
            Background="#F5F5F5"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="新增申报" />

                <!--  奖项选择  -->
                <Label Margin="0,5" Content="选择奖项:" />
                <ComboBox
                    MinHeight="32"
                    Margin="0,0,0,5"
                    Padding="8,6"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    DisplayMemberPath="AwardName"
                    IsDropDownOpen="{Binding IsAwardDropDownOpen}"
                    IsEditable="True"
                    ItemsSource="{Binding FilteredAwards}"
                    SelectedItem="{Binding SelectedAward}"
                    Text="{Binding AwardSearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                <!--  奖项预览图片  -->
                <Grid
                    Height="100"
                    Margin="0,0,0,10"
                    Visibility="{Binding HasAwardImagePreview, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Border
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="3">
                        <Image
                            Margin="2"
                            Source="{Binding AwardImagePreview}"
                            Stretch="Uniform" />
                    </Border>
                    <TextBlock
                        Margin="5"
                        Padding="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#80FFFFFF"
                        Text="奖项封面" />
                </Grid>

                <!--  申报对象选择  -->
                <Label Margin="0,5" Content="申报对象类型:" />
                <ComboBox
                    Margin="0,0,0,10"
                    DisplayMemberPath="Value"
                    IsEnabled="{Binding CanEditNomineeType}"
                    ItemsSource="{Binding NomineeTypes}"
                    SelectedItem="{Binding SelectedNomineeType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValuePath="Key" />

                <!--  申报对象（根据类型动态显示）  -->
                <Label Margin="0,5" Content="申报对象:" />
                <ComboBox
                    Margin="0,0,0,10"
                    DisplayMemberPath="DisplayName"
                    IsEnabled="{Binding CanSelectNominee}"
                    ItemsSource="{Binding Nominees}"
                    SelectedItem="{Binding SelectedNominee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Visibility="{Binding IsNomineeVisible, Converter={StaticResource BoolToVisibilityConverter}}" />

                <!--  所属部门  -->
                <Label Margin="0,5" Content="所属部门:" />
                <ComboBox
                    Margin="0,0,0,10"
                    DisplayMemberPath="DepartmentName"
                    IsEnabled="{Binding CanEditDepartment}"
                    ItemsSource="{Binding Departments}"
                    SelectedItem="{Binding SelectedDepartment}" />

                <!--  一句话介绍  -->
                <Label Margin="0,5" Content="一句话介绍:" />
                <TextBox
                    Height="40"
                    Margin="0,0,0,10"
                    AcceptsReturn="True"
                    Text="{Binding Introduction}"
                    TextWrapping="Wrap" />

                <!--  申报理由  -->
                <Label Margin="0,5" Content="申报理由:" />
                <TextBox
                    Height="60"
                    Margin="0,0,0,10"
                    AcceptsReturn="True"
                    Text="{Binding DeclarationReason}"
                    TextWrapping="Wrap" />

                <!--  提名图片  -->
                <Label Margin="0,5" Content="提名图片:" />
                <StackPanel Margin="0,0,0,10">
                    <!-- 图片预览区域 -->
                    <Border 
                        Height="100" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1"
                        Margin="0,0,0,5">
                        <Grid>
                            <Image
                                Margin="2"
                                Source="{Binding CoverImagePreview}"
                                Stretch="Uniform" />
                            <TextBlock
                                Text="暂无图片，请点击下方按钮选择"
                                Visibility="{Binding HasCoverImage, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=inverse}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="#999999"/>
                        </Grid>
                    </Border>
                    
                    <!-- 选择图片按钮 -->
                    <Button
                        Width="100"
                        Height="28"
                        HorizontalAlignment="Center"
                        Padding="10,0"
                        Background="#4285F4"
                        BorderBrush="#3367D6"
                        Command="{Binding SelectImageCommand}"
                        Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="选择图片" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--  按钮区域  -->
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="80"
                        Height="30"
                        Margin="10,0"
                        Command="{Binding SubmitCommand}"
                        Content="提交"
                        Style="{DynamicResource LoginButtonStyle}" />
                    <Button
                        Width="80"
                        Height="30"
                        Margin="10,0"
                        Command="{Binding CancelCommand}"
                        Content="取消"
                        Style="{DynamicResource LoginButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 
