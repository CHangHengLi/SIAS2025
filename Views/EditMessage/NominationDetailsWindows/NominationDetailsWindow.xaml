<Window
    x:Class="_2025毕业设计.Views.EditMessage.NominationDetailsWindows.NominationDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:_2025毕业设计.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:_2025毕业设计.ViewModels.EditMessage.NominationDetailsWindows"
    Title="提名详情"
    Width="700"
    Height="650"
    d:DataContext="{d:DesignInstance Type=viewmodels:NominationDetailsViewModel}"
    Background="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" Icon="/Images/提名详情.png">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dict/ConverterDict.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 添加内置转换器 -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            
            <!-- 本地定义转换器，避免引用问题 -->
            <converter:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标题区域  -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,15"
            Padding="0,0,0,15"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="#2196F3"
                        Text="提名详情" />
                    <TextBlock
                        FontSize="22"
                        Foreground="#757575"
                        Text=" - " />
                    <TextBlock
                        FontSize="22"
                        Foreground="#212121"
                        Text="{Binding NomineeName}" />
                </StackPanel>

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#E91E63"
                    Text="{Binding VoteCount, StringFormat=得票数: {0}}" />
            </Grid>
        </Border>

        <!--  主要内容区域  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  左侧信息  -->
            <Border
                Grid.Column="0"
                Width="220"
                Padding="0,0,15,0"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,1,0">
                <StackPanel>
                    <!--  提名图片  -->
                    <Border
                        Width="200"
                        Height="200"
                        Margin="0,0,0,15"
                        Background="#F5F5F5"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Image
                            x:Name="NomineeImageControl"
                            Margin="10"
                            Stretch="Uniform">
                            <Image.Source>
                                <Binding Converter="{StaticResource ByteArrayToImageConverter}" Path="NomineeImage">
                                    <Binding.ValidationRules>
                                        <ExceptionValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </Image.Source>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding NomineeImage}" Value="{x:Null}">
                                            <Setter Property="Source" Value="/Images/默认头像.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Border>

                    <!--  基本信息  -->
                    <Border
                        Margin="0,0,0,10"
                        Padding="10"
                        Background="#F5F5F5"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontWeight="Bold"
                                Text="基本信息" />

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="#757575"
                                    Text="提名编号：" />
                                <TextBlock
                                    x:Name="NominationIdControl"
                                    Grid.Column="1"
                                    Foreground="#212121"
                                    Text="{Binding Nomination.NominationId}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="#757575"
                                    Text="提报奖项：" />
                                <TextBlock
                                    Grid.Column="1"
                                    Foreground="#212121"
                                    Text="{Binding AwardName}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="#757575"
                                    Text="所属部门：" />
                                <TextBlock
                                    Grid.Column="1"
                                    Foreground="#212121"
                                    Text="{Binding DepartmentName}"
                                    TextWrapping="Wrap" />
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="#757575"
                                    Text="提名时间：" />
                                <TextBlock
                                    Grid.Column="1"
                                    Foreground="#212121"
                                    Text="{Binding Nomination.NominationTime, StringFormat=yyyy-MM-dd HH:mm}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!--  右侧内容  -->
            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  一句话介绍区域  -->
                <Border
                    Grid.Row="0"
                    Margin="0,0,0,15"
                    Padding="15"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="一句话介绍" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="14"
                            Foreground="#212121"
                            Text="{Binding Introduction}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!--  提名理由区域  -->
                <Border
                    Grid.Row="1"
                    Margin="0,0,0,15"
                    Padding="15"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Text="提名理由" />

                        <ScrollViewer
                            Grid.Row="1"
                            Height="130"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                            <TextBlock
                                Foreground="#212121"
                                Text="{Binding Reason}"
                                TextWrapping="Wrap" />
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- 投票记录容器 -->
                <GroupBox Grid.Row="2" Header="投票记录" Margin="10,5,5,0">
                    <Grid>
                        <!-- 使用ItemsControl替代ListView显示所有投票记录 -->
                        <ItemsControl x:Name="VoteRecordsItemsControl" 
                                  ItemsSource="{Binding Nomination.VoteRecords}" 
                                  Margin="0,10,0,0"
                                  MaxHeight="180">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ItemsControl.Template>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Margin="0,0,0,5" Padding="5" Background="Transparent">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" MinWidth="70" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock>
                                                    <Run Text="{Binding VoterEmployee.EmployeeName, Mode=OneWay, TargetNullValue=''}"/>
                                                    <Run Text="{Binding VoterAdmin.AdminName, Mode=OneWay, TargetNullValue=''}"/>
                                                    <Run Text=" - "/>
                                                    <Run Text="{Binding VoterEmployee.Department.DepartmentName, Mode=OneWay, TargetNullValue=''}"/>
                                                    <Run Text="{Binding VoterAdmin.Department.DepartmentName, Mode=OneWay, TargetNullValue=''}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding VoteTime, StringFormat='投票时间: {0:yyyy-MM-dd HH:mm:ss}'}" FontSize="11" Foreground="#707070"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="删除" Width="60" Height="28" Margin="5,0,0,0" Padding="0,2,0,2" VerticalContentAlignment="Center" Background="#FF5A5A" Foreground="White"
                                                    Visibility="{Binding DataContext.IsSuperAdmin, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Command="{Binding DataContext.DeleteVoteRecordCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                                    CommandParameter="{Binding}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!--  底部按钮区域  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            
            <!-- 关闭按钮 -->
            <Button
                Width="100"
                Height="35"
                Margin="5,0"
                Command="{Binding CloseCommand}"
                Content="关闭"
                IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="#E0E0E0"
                                        BorderBrush="#BDBDBD"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <ContentPresenter
                                            Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#BDBDBD" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window> 