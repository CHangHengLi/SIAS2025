    graph [fontname="Microsoft YaHei", fontsize=12, rankdir=TB, splines=ortho];
    node [fontname="Microsoft YaHei", fontsize=10, shape=box, style=filled, fillcolor=white, color=black];
    edge [fontname="Microsoft YaHei", fontsize=9, color=black];

    // 核心节点
    Users [label="用户"];
    BaseMgmt [label="基础管理"];
    AwardMgmt [label="奖项管理"]; 
    Nomination [label="提名申报"];
    Voting [label="投票系统"];
