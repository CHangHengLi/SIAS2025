    <converter:CollectionContainsConverter x:Key="CollectionContainsConverter" />
    <converter:CollectionContainsMultiConverter x:Key="CollectionContainsMultiConverter" />
    <converter:CountToBooleanConverter x:Key="CountToBooleanConverter" />
    <converter:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    
    <!-- 格式化 -->
    <converter:DateFormatConverter x:Key="DateFormatConverter" />
    <converter:WidthPercentageConverter x:Key="WidthPercentageConverter" />
    <converter:NumberToRoleConverter x:Key="NumberToRoleConverter" />
