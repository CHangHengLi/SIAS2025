<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:_2025毕业设计.Common"
    xmlns:converter="clr-namespace:_2025毕业设计.Converter"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    
    <!-- 基础转换器 -->
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <converter:BooleanInvertConverter x:Key="BooleanInvertConverter" />
    <converter:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    <converter:BoolToIconConverter x:Key="BoolToIconConverter" />
